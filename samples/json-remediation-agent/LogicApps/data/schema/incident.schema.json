{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Incident",
  "type": "object",
  "required": ["incidentId", "priority", "customerId", "details"],
  "properties": {
    "incidentId": {
      "type": "string"
    },
    "priority": {
      "type": ["string", "number"]
    },
    "customerId": {
      "type": "string"
    },
    "details": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": true
}
